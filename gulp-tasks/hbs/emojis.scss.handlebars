/* Ref.: 
    https://github.com/twolfson/spritesheet-templates
    https://www.npmjs.com/package/gulp.spritesmith#handlebars-template
*/ 
{{#extend "scss"}}
{{#content "sprites"}}
.smls-emojis {
  font-size: 16px;
}
.smls-emojis {
  &:before {
    content:' ';
    border-radius: 2px;
    display: inline-block;
    margin-top: -3px;
    margin-left: -16px;
    margin-right: -16px; 
    vertical-align: middle;
    background-image: url({{{spritesheet.escaped_image}}});
    background-repeat: no-repeat;
    background-size: {{spritesheet.px.width}} {{spritesheet.px.height}};
    transform: scale(0.33);
  }
  &.mid {
    &:before {
      margin-left: -12px;
      margin-right: -12px; 
      transform: scale(0.5); 
    }
  }
  &.big {
    &:before {
      margin-left: 0;
      margin-right: 0; 
      transform: scale(1); 
    }
  }
{{#each sprites}}
  &.{{strings.name}}:before {
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
  }
{{/each}}
}
{{/content}}
{{#content "spritesheet"}}
{{/content}}
{{/extend}}